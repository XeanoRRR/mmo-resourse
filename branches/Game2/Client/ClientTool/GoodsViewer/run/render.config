render
{
	//显示驱动设置
	window = true;
	hvp = false;
	
	texturemode = 32;
	3dlinear    = true;
	
	font = 12.font;
	
	window
	{
		x = 100;
		y = 100;
		width  = 1024;
		height = 768;
		autocenter = true;
		autostyle  = true;
	}
		
	fullscreen
	{
		//显示模式 16位色[23] 32位色[22]
		backbufferfmt = 22;
	}
}
